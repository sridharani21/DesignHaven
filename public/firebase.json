{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      ".firebaserc",
      "**/.*",
      "**/node_modules/**",
      "FIREBASE_SETUP.md",
      "DEPLOYMENT_CHECKLIST.md",
      "DEPLOY_INSTRUCTIONS.md",
      "QUICK_FIX.md",
      "README.md",
      "public/**",
      "firestore.*"
    ],
    "cleanUrls": true,
    "trailingSlash": false,
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
